{
  "name": "@tiny-cms/core",
  "version": "0.1.0",
  "description": "Core CMS logic for tiny-cms",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
